page {
  background-color: rgba(92, 88, 88, 0.123)
}

.row {
  display: flex;
  flex-direction: row;
  margin-bottom: 4px;
  padding: 8px 18px;
  background-color: white;
}

.title {
  font-size: 16px;
  color: #333;
  margin: 20rpx 0;
  line-height: 100%;
}

.time {
  font-size: 14px;
  color: #999;
}

.answer-actions{
  width: 690rpx;
  padding: 10rpx 0  0;
  color: #a0acac;
}

.answer-actions view{
  display: inline-block;
  vertical-align: text-bottom;
  padding: 0 10rpx 0 0;
  font-size: 24rpx;
  margin-right: 20rpx;
}

.close-title{
  margin: 10rpx 20rpx; 
  line-height: 100%;
}

.t28rpx {
  font-size: 28rpx;
